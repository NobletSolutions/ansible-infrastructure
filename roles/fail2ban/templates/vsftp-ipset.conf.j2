[vsftpd-ipset]
enabled  = true
filter   = vsftpd
action   = iptables-ipset-proto6[name=VSFTPD, port=ftp, protocol=tcp]
           sendmail-whois[name=VSFTPD,dest={{fail2ban_notification_dest}}, sender={{fail2ban_notification_sender}}, sendername="Fail2Ban"]
logpath  = /var/log/vsftpd.log
maxretry = 2
