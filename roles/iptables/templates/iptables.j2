# Generated by ansible
*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:RH-Firewall-1-INPUT - [0:0]
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT-A INPUT -p tcp -m multiport ! --dports {{iptables_allowed_blacklist_ports}} -m set --match-set blacklist src -j DROP
-A INPUT -i lo -j ACCEPT
-A INPUT -j RH-Firewall-1-INPUT
-A FORWARD -j RH-Firewall-1-INPUT
-A RH-Firewall-1-INPUT -i lo -j ACCEPT
-A RH-Firewall-1-INPUT -p icmp -m icmp --icmp-type any -j ACCEPT
-A RH-Firewall-1-INPUT -d 224.0.0.251 -p udp -m udp --dport 5353 -j ACCEPT

{% for port in iptables_allowed_tcp_ports %}
-A RH-Firewall-1-INPUT -p tcp -m tcp --dport {{ port }} -j ACCEPT
{% endfor %}

{% for port in iptables_allowed_udp_ports %}
-A RH-Firewall-1-INPUT -p udp -m udp --dport {{ port }} -j ACCEPT
{% endfor %}

# Allow NTP traffic for time synchronization.
-A RH-Firewall-1-INPUT -p udp --sport 123 -j ACCEPT

# Additional custom rules.
{% for rule in iptables_additional_rules %}
{{ rule }}
{% endfor %}

# Log EVERYTHING (ONLY for Debug).
-A RH-Firewall-1-INPUT -j LOG

# Log other incoming requests (all of which are dropped) at 15/minute max.
-A RH-Firewall-1-INPUT -m limit --limit 15/minute -j LOG --log-prefix "iptables Dropped: "

# Drop all other traffic.
-A RH-Firewall-1-INPUT -j DROP
COMMIT

