include_conf	/etc/rsnapshot-common.conf

snapshot_root	{{backup_server_directory}}/{{item.name}}/

interval	hourly	{{backup_server_hourly}}
interval	daily	{{backup_server_daily}}
interval	weekly	{{backup_server_weekly}}
interval	monthly	{{backup_server_monthly}}

logfile	{{backup_server_directory}}/{{item.name}}/rsnapshot.log
lockfile	{{backup_server_directory}}/{{item.name}}/rsnapshot.pid

exclude_file	{{backup_server_directory}}/{{item.name}}/exclude_file.txt

# {{ item.name }}
{% for args in item.points %}
backup	{{args}}	./
{% endfor %}

